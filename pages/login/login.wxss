@import "/static/style/common.wxss";

.container {
}

.login {
  padding: 112rpx 16rpx 144rpx;
}

.body {
  margin: 0 auto;
  width: 92%;
}

.body .form-item {
  margin-bottom: 32rpx;
  width: 100%;
  font-size: 0;
}

.body .form-item.form-item-button {
  margin-bottom: 0;
}

.psw-wrapper {
  display: flex;
}

.psw-wrapper .input {
  flex: 3;
  border-right: none;
  border-radius: 0; 
  border-top-left-radius: 4px;
  border-bottom-left-radius: 4px;
}

.input-prefix {
  display: flex;
  align-items: center;
  box-sizing: border-box;
  background: #fff;
  border: 1px solid #d9d9d9;
  border-left: none;
  border-top-right-radius: 4px;
  border-bottom-right-radius: 4px;
}

.prefix-link {
  vertical-align: middle;
  padding-left: 30rpx; 
  padding-right: 24rpx; 
  color: #8c8c8c;
  font-size: 28rpx;
  border-left: 1px solid #d9d9d9;
}

.switch-logo {
  height: 80rpx;
  line-height: 80rpx;
  color: #8c8c8c;
}
