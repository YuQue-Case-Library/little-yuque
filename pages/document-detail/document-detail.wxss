
@import "/static/style/common.wxss";

.container {
  width: 100%;
  min-height: 100vh;
}

.container .core-view {
  width: 100%;
}

.head-view {
  padding: 24rpx 0;
  width: 100%;
  box-shadow: 0px 0px 10px rgba(0,21,41,.08);
}

.head-view .head-box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 0 auto;
  width: 92%;
  font-size: 32rpx;
}

.doc-btns {
  font-size: 24rpx;
}

.doc-btns .save-btn {
  margin-right: 28rpx;
}

.doc-editor {
  margin: 0 auto;
  padding-top: 24rpx;
  width: 92%;
}

.doc-editor .doc-title {
  padding-bottom: 28rpx;
  font-size: 36rpx;
  font-weight: 600;
}

.doc-editor .doc-area {
  height: calc(100vh - 280rpx);
  width: 100%;
  overflow-y: auto;
  line-height: 1.6;
}
