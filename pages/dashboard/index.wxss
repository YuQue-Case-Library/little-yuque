@import "/static/style/common.wxss";

.container {
  height: 100vh;
}

.tab-view {
  width: 100%;
}

.tabs {
  position: fixed;
  bottom: 0;
  padding: 12rpx 0 10rpx;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  width: 100%;
  background-color: #fff;
  box-shadow: 0 -2px 6px rgba(0,21,41,.08);
}

.tabs .tab {
  display: flex;
  flex-direction: column;
  transition: all 0.3s ease-in-out;
}

.tabs .tab.current {
  color: #096dd9;
  font-weight: 700;
}

.tabs .tab .larkicon {
  margin-bottom: 8rpx;
  font-size: 46rpx;
}
