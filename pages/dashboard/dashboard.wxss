@import "/static/style/common.wxss";

.container {
  height: 100vh;
}

.tab-view {
  margin-bottom: 114rpx;
  width: 100%;
}

.tabs {
  position: fixed;
  bottom: 0;
  padding: 10rpx;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  width: 100%;
  background-color: #fff;
  box-shadow: 0 -2px 6px rgba(0,21,41,.08);
}

.tabs .tab {
  display: flex;
  flex-direction: column;
  line-height: 1.5;
}

.tabs .tab .larkicon {
  font-size: 46rpx;
}
