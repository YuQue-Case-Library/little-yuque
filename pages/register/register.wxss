@import "/static/style/common.wxss";

.container {
  padding: 112rpx 16rpx 144rpx;
  height: 100vh;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 64rpx;
}

.header .logo {
  margin-bottom: 48rpx;
  width: 112rpx;
  height: 112rpx;
}

.header .logo-tip {
  color: #595959;
}

.body {
  width: 96%;
}

.body .form-item {
  margin-bottom: 32rpx;
  width: 100%;
  font-size: 0;
}

.input-prefix {
  padding: 16rpx 22rpx;
  font-size: 32rpx;
  height: 100%;
  border:1px solid #d9d9d9;
  border-right: none;
  border-radius: 4px 0 0 4px;
  background: #fff;
}

.input-mobile {
  border-radius: 0 4px 4px 0;
}

.vercode {
  margin-left: 16rpx;
  font-size: 28rpx;
  letter-spacing: 0;
  min-width: 208rpx;
  border-radius: 4px;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 30rpx;
  color: #595959;
}

.send-message {
  margin-bottom: 32rpx;
  color: #8c8c8c;
}

.register-tip {
  display: flex;
  justify-content: center;
  margin-top: 48rpx;
  color: #595959;
}
