@import "/static/style/common.wxss";

.container {
  width: 100%;
  min-height: 100vh;
  background-color: #fafafa;
}

.container .core-view {
  margin: 40rpx auto 0;
}

.container .core-view  .title {
  margin-bottom: 42rpx;
  padding: 0 32rpx;
  text-align: center;
}

.container .core-view  .title.book-title {
  margin-bottom: 28rpx;
}

.title .title-repo {
  margin-bottom: 16rpx;
  font-size: 40rpx;
  font-weight: 500;
  color: #262626;
}

.title .title-introduction {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  line-clamp: 1;
  -webkit-box-orient: vertical;
  font-size: 28rpx;
  color: #8c8c8c;
}

.repo-view {
  padding: 0 32rpx;
}

.repo-view .no_book_wrapper {
  margin-top: 160rpx;
  text-align: center;
}

.repo-view .no_book_wrapper .no_book_icon {
  width: 338rpx;
  height: 210rpx;
}

.repo-view .repo-item {
  margin-bottom: 42rpx;
  border-radius: 6px; 
  background-color: #fff;
  box-shadow: 0px 0px 10px rgba(0, 22, 41, .08);
}

.repo-view .repo-item .repo-cover {
  margin: 0;
  height: 280rpx;
  width: 100%;
  border-radius: 6px 6px 0 0; 
}

.repo-view .repo-item .repo-box {
  margin-top: -8rpx;
  padding: 20rpx;
}

.repo-item .repo-box .repo-title {
  margin-bottom: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
}

.repo-item .repo-box .repo-introduction {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  color: #8c8c8c;
}

.repo-item .repo-box .repo-info {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #8c8c8c;
}

.repo-item .repo-box .repo-info .repo-author {
  color: #595959;
}