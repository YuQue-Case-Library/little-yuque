<view class="container">
  <view class="core-view">
    <view class="title">创建属于自己的团队</view>
    <form bindsubmit="formSubmit" bindreset="formReset">
      <view class="form-item">
        <view class="compact-view">
          <view class="compact-view-prefix">团队名称</view>
          <input name="name" class="compact-view-input" placeholder="团队名称"/>
        </view>
      </view>
      <view class="form-item">
        <view class="compact-view">
          <view class="compact-view-prefix">团队简介</view>
          <input name="description" class="compact-view-input" placeholder="团队简介"/>
        </view>
      </view>
      <view class="form-item">
        <picker bindchange="handlePublicPick" value="{{index}}" range-key="name" range="{{publicArray}}">
          <view class="compact-view">
            <view class="compact-view-prefix">可见范围</view>
            <input name="publicText" class="compact-view-input" value="{{seletedPublicText}}" disabled placeholder="请设置可见范围"/>
          </view>
        </picker>
      </view>
      <view class="form-item">
        <view class="compact-view">
          <view class="compact-view-prefix">www.yuque.com/littlelane/</view>
          <input name="login" class="compact-view-input" placeholder="知识库路径"/>
        </view>
      </view>
      <view class="form-item">
        <button type="primary" form-type="submit">创建</button>
      </view>
      <view class="form-item tip">
        <text class="icon">温馨提示</text>
        <text>目前小程序暂未支持团队头像上传</text>
      </view>
    </form>
  </view>
</view>