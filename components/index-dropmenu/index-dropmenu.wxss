@import "/static/style/common.wxss";

.index-dropmenu {
  top: 100rpx;
}

.index-dropmenu .mask {
  position: absolute;
  z-index: 998;
  top: 100rpx;
  width: 100%;
  height: 100vh;
  opacity: 0;
  background-color: rgba(0, 0, 0, .4);
  transition: opacity .15s cubic-bezier(.645,.045,.355,1) .1s;
}

.index-dropmenu .mask.show{
  opacity: 1;
}

.index-dropmenu .dropmenu {
  position: fixed;
  z-index: 998;
  top: 70rpx;
  left: 0;
  right: 0;
  opacity: 0;
  background-color: #fff;
  transition: top .2s cubic-bezier(.645,.045,.355,1) .05s, opacity .15s cubic-bezier(.645,.045,.355,1) .05s;
}

.index-dropmenu .dropmenu.show{
  top: 100rpx;
  opacity: 1;
}

