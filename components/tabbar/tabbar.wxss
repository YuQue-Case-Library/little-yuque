@import "/static/style/common.wxss";

.tabbar {
  position: fixed;
  right: 0;
  bottom: 0;
  left: 0;
  padding: 12rpx 0 10rpx;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  width: 100%;
  background-color: #fff;
  box-shadow: 0 -2px 6px rgba(0,21,41,.08);
}

.tabbar .tab {
  display: flex;
  flex-direction: column;
  transition: all 0.3s ease-in-out;
}

.tabbar .tab.current {
  color: #096dd9;
  font-weight: 700;
}

.tabbar .tab .larkicon {
  margin-bottom: 8rpx;
  font-size: 46rpx;
}