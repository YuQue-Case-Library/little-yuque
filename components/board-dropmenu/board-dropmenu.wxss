@import "/static/style/common.wxss";

.index-dropmenu {
  top: 100rpx;
}

.index-dropmenu .mask {
  position: absolute;
  z-index: 998;
  top: 100rpx;
  width: 100%;
  height: 100vh;
  opacity: 0;
  background-color: rgba(0, 0, 0, .4);
  transition: opacity .15s cubic-bezier(.645,.045,.355,1) .1s;
}

.index-dropmenu .mask.show{
  opacity: 1;
}

.index-dropmenu .dropmenu {
  position: fixed;
  z-index: 998;
  top: 70rpx;
  left: 0;
  right: 0;
  opacity: 0;
  background-color: #fff;
  transition: top .2s cubic-bezier(.645,.045,.355,1) .05s, opacity .15s cubic-bezier(.645,.045,.355,1) .05s;
}

.index-dropmenu .dropmenu.show{
  top: 100rpx;
  opacity: 1;
}

.dropmenu .search {
  padding: 32rpx 32rpx 8rpx;
}

.search-wrapper {
  
}

.search-wrapper .input-prefix {

}

.search-wrapper .input {
  padding-left: 68rpx;
  background-color: #f5f5f5;
  border: none;
}

.dropmenu .menu {
  
}

.menu .menu-item {
  margin: 8rpx 0;
  padding: 0 32rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  color: #595959;
}

.menu .menu-item.menu-user {
  vertical-align: middle;
  height: 104rpx;
}

.board-menu {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  padding: 0 32rpx;
}

.board-menu .board-menu-item {
  margin: 8rpx 0 16rpx;
  padding: 0 8rpx;
  box-sizing: border-box;
  height: 80rpx;
  line-height: 80rpx;
  width: 33%;
  text-align: center;
}

.board-menu .board-menu-item .board-menu-item-text {
  background: #f5f5f5;
  border-radius: 8rpx;
  transition: color .3s;
  color: #595959;
}

.board-menu .board-menu-item.active .board-menu-item-text{
  color: #25b864;
}

.menu .menu-user .user-icon{
  margin: 20rpx 32rpx;
  vertical-align: middle;
  width: 64rpx;
  height: 64rpx;
  border-radius: 32rpx;
}

.menu .menu-user .user-name{
  flex: auto;
  color: #595959;
  line-height: 64rpx;
}